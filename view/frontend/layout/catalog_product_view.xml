<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <referenceContainer name="product.info.main">
    <block class="Magepow\Sizechart\Block\Product\Sizechart" ifconfig="magepow_sizechart/general/enabled" name="sizechart" after="product.info.addtocart" template="sizechart.phtml" />
 </referenceContainer>
  <referenceBlock name="product.info.details">
    <block class="Magepow\Sizechart\Block\Product\Sizechart" ifconfig="magepow_sizechart/general/enabled" name="custom.tab" template="customtab.phtml" group="detailed_info">
      <arguments>
        <argument translate="true" name="title" xsi:type="string" >Custom Tab</argument>
      </arguments>
    </block>
   </referenceBlock>
</page>